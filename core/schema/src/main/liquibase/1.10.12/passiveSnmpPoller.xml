<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1.11.3-add-passive-SNMP-poller-asset-fields" author="syawar">
		<addColumn tableName="assets">
			<column name="hostlist" type="character varying(1023)">
			</column>
			<column name="snmpmib" type="character varying(200)">
			</column>
			<column name="macaddress" type="character varying(200)">
			</column>
			<column name="snmpcomparator" type="character varying(20)">
			</column>
			<column name="comparevalue" type="character varying(128)">
			</column>
			<column name="snmpcheckdate" type="character varying(128)">
			</column>
			<column name="lastparentcontroller" type="character varying(200)">
			</column>
		</addColumn>
		<rollback>
			<dropColumn tableName="assets" columnName="hostlist"/>	
			<dropColumn tableName="assets" columnName="snmpmib"/>
			<dropColumn tableName="assets" columnName="macaddress"/>
			<dropColumn tableName="assets" columnName="snmpcomparator"/>
			<dropColumn tableName="assets" columnName="comparevalue"/>
			<dropColumn tableName="assets" columnName="snmpcheckdate"/>
			<dropColumn tableName="assets" columnName="lastparentcontroller"/>		
		</rollback>
	</changeSet>

</databaseChangeLog>